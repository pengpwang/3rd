/* pages/muchMoreDetails/muchMoreDetails.wxss */
.common{
  padding-bottom: 100rpx;
  border-top:2rpx solid #f5f5f5;
}
/*公共样式*/
.commodity-pad{
  padding: 0 25rpx;
}
.pad33{
  padding: 0 33rpx;
}
.commodity-border{
  border-top:15rpx solid #f3f3f3;
}
.commodity-left{
  width: 660rpx;
}
image.right{
  width: 14rpx;
  height: 23rpx;
}
/*商品轮播*/
.top-swiper{
  width:100%rpx;
  height:556rpx;
  background: #FFFCFE;
}
.top-swiper swiper{
  width: 682rpx;
  height: 556rpx;
  margin: 0 auto;
  background: #fff;
}
.top-swiper swiper image{
  width: 600rpx;
  height: 380rpx;
  display: block;
  margin: 0 auto;
}
 .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 30rpx;
}

/* 商品名称等 */
.commodity-descon{
  width: 100%;
  height: 100rpx;
  background: #E90909;
  padding: 0 23rpx 0 26rpx;
}
.priceCon .name{
  font-size:28rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.priceCon .price{
  font-size: 36rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.commodity-descon .oldPrice{
  font-size:22rpx;
  font-weight:500;
  text-decoration:line-through;
  color:rgba(255,255,255,1);
}
.commodity-descon .time{
  font-size:22rpx;
  line-height: 22rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
}
.commodity-descon .time .day{
  display: inline-block;
  text-align: center;
  height:34rpx;
  line-height: 34rpx;
  background:rgba(153,0,0,1);
  border-radius:17rpx;
  padding: 0 10rpx;
  margin-top: 9rpx;
}

/* 商品剩余 */
.commodity-has .wid{
  width: 680rpx;
  justify-content: flex-start;
  height: 70rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.commodity-has .name{
  font-size:24rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.commodity-has .hasNums{
  color: #F02F2F;
  font-weight:bold;
  font-size:24rpx;
  padding-left: 30rpx;
}
/* 商品价格等 */
.commodity-name{
  padding-bottom: 17rpx;
  padding-top: 24rpx;
}
.commodityNums{
  display: inline-block;
  padding: 0 10rpx;
  font-size: 26rpx;
  height: 35rpx;
  line-height: 35rpx;
  color: #fff;
  font-weight: bold;
  background: #FF4648;
}
.commodityPrice span.max{
  font-size: 34rpx;
  margin-left: 10rpx;
}
.commodityPrice span{
  font-size: 28rpx;
}
.commodityName{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:32rpx;
  margin-top: 13rpx;
}
.commodityTag{
  font-size:24rpx;
  font-weight:500;
  color:#FF4648;
  line-height: 30rpx;
  margin-top: 9rpx;
}
/*商品数量*/
.commodity-nums{
  justify-content: flex-start;
  height: 84rpx;
}
.commodity-nums .numsName{
  font-size:24rpx;
  font-weight:500;
  color:rgba(141,141,141,1);
}
.numsBtn{
  width: 51rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  background:rgba(245,245,245,1);
  border-radius:4rpx;
  font-weight:bold;
  font-size: 28rpx;
  color:rgba(152,152,152,1);
  margin: 0 24rpx;
}
.numsVal{
  font-size:24rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.numsHas{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(141,141,141,1);
}
/* 底部按钮*/
.foot-btn{
  position: fixed;
  bottom:0rpx;
  width: 100%;
}
.foot-btn .btn{
  width: 50%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background: #FF0901;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.foot-btn .btn1{
  background:rgba(255,182,0,1);
}