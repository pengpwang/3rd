/* pages/index/index.wxss */
page{
  background: #fff;
}
/* 公共头部边框 */
.border-top{
  border-top:15rpx solid #f5f5f5;
}
image{
  width: 100%;
  height: 100%;
}

/* 搜索 */
.search-con{
  width:700rpx;
  height:52rpx;
  background:rgba(246,246,246,1);
  border-radius:26rpx;
  margin: 15rpx auto;
  justify-content: flex-start;
}
.search-con image{
  width: 22rpx;
  height: 22rpx;
  margin-left: 22rpx;
}
.search-con input{
  padding-left: 19rpx;
  flex-grow: 1;
}
/* 轮播 */
swiper{
  width: 710rpx;
  height: 300rpx;
  margin: 0 auto;
  border-radius:10rpx;
  overflow: hidden;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
/* 功能按钮 */
.function-button{
  justify-items: flex-start;
  flex-flow: wrap;
  padding-bottom: 34rpx;
  padding-top: 20rpx;
}
.button-item{
  width: 25%;
  text-align: center;
  padding-bottom: 14rpx;
  padding-top:14rpx;
  margin-bottom: 5rpx;
}
.button-item image{
  width: 122rpx;
  height: 122rpx;
  display: block;
  margin: 0 auto;
}
.button-item .name{
  font-size:24rpx;
  line-height: 23rpx;
  font-weight:500;
  color:#414141;
}
/*活动模块*/
.activity-con{
  padding: 43rpx 18rpx 42rpx 17rpx;
  align-items: flex-start;
}
.activity-left{
  width: 287rpx;
  height: 391rpx;
}
.activity-right{
  width: 413rpx;
}
.activity-top{
  width: 100%;
  height: 203rpx;
}
.activity-bot{
  width: 100%;
  justify-content: space-between;
  margin-top: 18rpx;
}
.activity-bot image{
  width: 206rpx;
  height: 171rpx;
}
.activity-bot image.second{
  width: 197rpx;
}
/* 商品分类模块 */
.type-con{
  padding-top: 24rpx;
}
.type-top{
  width: 700rpx;
  height: 250rpx;
  margin: 24rpx auto 0;
  justify-content: flex-start;
}
.type-list-con{
  width: 100%;
  flex-flow: wrap;
  padding: 0 43rpx;
}
.type-list{
  width: 316rpx;
  margin-top: 25rpx;
}
.type-img{
  width:316rpx;
  height:316rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(241, 241, 241, 1);
  border-radius:20rpx;
}
.type-img image{
  width: 164rpx;
  height: 267rpx;
}
.type-name{
  font-size:26rpx;
  line-height: 25rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin: 17rpx 0 11rpx 0;
}
.type-desc{
  font-size:24rpx;
  line-height: 24rpx;
  font-weight:500;
  color:#999999;
}
.type-more{
  margin-top: 39rpx;
}
.type-price{
  font-size:30rpx;
  font-weight:500;
  color:rgba(253,61,78,1);
}
.type-btn{
  width: 36rpx;
  height: 32rpx;
}
.type-title{
  justify-content: center;
}
.type-title .line{
  width:50rpx;
  height:2rpx;
  background:rgba(230,230,230,1);
}
.titleName{
  font-size:28rpx;
  font-weight:400;
  margin: 0 12rpx;
  color:#909090;
}
/* 已到底线了 */
.noData{
  padding: 47rpx 0;
}