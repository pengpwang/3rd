}

.add-actions{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 26rpx;
}

.add-action-edit{
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-action-edit-icon{
  width: 26rpx;
  height: 26rpx;
  margin-right: 15rpx;
}

.add-action-del{
