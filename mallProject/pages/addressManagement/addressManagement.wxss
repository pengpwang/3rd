  height: 100%;
}

.add-item{
  width: 100%;
  height: 280rpx;
  background: #fff;
  border:1px solid rgba(231, 231, 231, 1);
  margin-bottom: 16rpx;
}

.add-t{
  padding: 40rpx 98rpx 40rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.add-name{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.add-name-txt{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.add-seled{
  width: 64rpx;
  height: 34rpx;
  border: 1px solid #FD4141;
