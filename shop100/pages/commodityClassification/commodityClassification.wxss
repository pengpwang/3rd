/* pages/commodityClassification/commodityClassification.wxss */
page{
  background: #fff;
}
.common{
  border-top:1rpx solid #f3f3f3;
}
.top-search{
  padding: 16rpx 0 19rpx 0;
  height: 90rpx;
}
.search{
  width:686rpx;
  height:55rpx;
  background:rgba(245,245,245,1);
  border:1rpx solid rgba(231,231,231,1);
  border-radius:10rpx;
  margin: 0 auto;
}
.search image{
  width: 22rpx;
  height: 24rpx;
  margin-left: 17rpx;
}
.search input{
  padding-left: 22rpx;
  flex-grow: 1;
  font-size:24rpx;
  font-weight:500;
  color:#737373;
}
.classification-con{
  border-top:1rpx solid #f3f3f3;
  align-items: flex-start;
  justify-content: flex-start;
  position: fixed;
  width: 100%;
  height: 100%;
  /* height: calc(100% - 90rpx); */
  /* top:90rpx; */
}
.classification-con scroll-view{
  height: 100%;
}
.classification-left{
  width: 173rpx;
}
.classification-right{
  width: 546rpx;
  margin-left: 20rpx;
}

.type-name{
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(133,134,133,1);
  background:rgba(247,247,247,1);
  border:1rpx solid rgba(238,238,238,1);
  border-top:none;
}
.type-name.active{
  background: #fff;
  color: #FF4648;
  border-left: 4rpx solid #FF4648;
  border-right:1rpx solid #fff;
}
.classification-title{
  font-size:24rpx;
  line-height: 24rpx;
  font-weight:bold;
  color:#888888;
  margin-top:24rpx;
}
.classification-list{
  width: calc(100% / 3)
}
.classification-list .imgbox{
  width: 170rpx;
  height: 170rpx;
}
.classification-list .imgbox image{
  width: 170rpx;
  height: 150rpx;
}
.classification-list-con{
  margin-top: 10rpx;
  justify-content: flex-start;
  flex-flow: wrap;
  padding-left: 13rpx;
  padding-right: 30rpx;
}
.classification-list .name{
  font-size:24rpx;
  line-height: 30rpx;
  padding: 10rpx;
  font-weight:bold;
  color:#000000;
  text-align: left;
}