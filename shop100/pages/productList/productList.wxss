/* pages/productList/productList.wxss */
.top-tab{
  align-items: center;
  border-top:1rpx solid rgba(231, 231, 231, 1);
  border-bottom:1rpx solid rgba(231, 231, 231, 1);
}
.tab-item{
  height: 72rpx;
  font-size:26rpx;
  line-height: 72rpx;
  text-align: center;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:#333333;
  width: 20%;
  position: relative
}
.tab-item.active{
  color:rgba(255,70,72,1);
}
.tab-item.active::after{
  content:'';
  position: absolute;
  bottom:-2rpx;
  left: 50%;
  margin-left: -39rpx;
  width:78rpx;
  height:4rpx;
  background:rgba(255,70,72,1);
}
.tab-item.flex{
  justify-content: center
}
.tab-item image{
  width:15rpx;
  height: 8rpx;
  display: block;
  margin-left: 8rpx;
}
.tab-item image.last{
  margin-top:5rpx;
}

.list-item .img{
  width: 216rpx;
  height: 216rpx;
}
.list-item .img image{
  width: 200rpx;
  height: 200rpx;
}
.list-right{
  width: 500rpx;
  border-bottom: 2rpx solid #F2F2F2;
  padding-top: 28rpx;
  padding-bottom: 34rpx;
  min-height: 224rpx;
  position: relative;
}
.top-list{
  flex-flow: wrap;
}
.list-tag{
  background: #FFEDED;
  padding: 5rpx 4rpx;
  border-radius: 4rpx;
  overflow: hidden;
  font-size:20rpx;
  font-weight:normal;
  color:rgba(223,24,28,1);
  margin-right: 5rpx;
}
.list-tag.noNum{
  background: #ddd;
  color: #fff
}
.list-title{
  font-size:26rpx;
  line-height: 34rpx;
  width: 500rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.bot-list{
  justify-content: flex-start;
  position: absolute;
  bottom:34rpx;
}
.pirce{
  font-size:32rpx;
  line-height: 32rpx;
  font-weight:400;
  color:rgba(217,0,4,1);
}
.pirce .min1{
  font-size:26rpx;
}
.pirce .min2{
  font-size:22rpx;
}
.bot-list>view{
  margin-right: 21rpx;
}
.oldPirce{
  text-decoration:line-through;
  font-size:24rpx;
  line-height: 24rpx;
  font-weight:normal;
  color:rgba(204,204,204,1);
}
.bot-list .nums{
  font-size:24rpx;
  line-height: 24rpx;
  font-weight:normal;
  color:rgba(204,204,204,1);
}