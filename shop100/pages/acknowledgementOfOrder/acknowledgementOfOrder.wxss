page{
  background: #f5f6fb;
  font-family:PingFang-SC-Medium;
}

.container{
  padding-bottom: 90rpx;
}

.address{
  margin-bottom: 20rpx;
  background: #ffffff;
}

.add-info{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.add-info-l{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.add-info-name{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.add-info-moren{
  width: 64rpx;
  height: 34rpx;
  border: 1px solid #FD4141;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #FD4141;
}

.add-info-t{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  font-size: 24rpx;
}

.add-info-t-phone{
  color: #333;
  margin-bottom: 20rpx;
}

.add-info-t-add{
  color: #868686;
  width: 440rpx;
}

.add-info-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #868686;
  font-size: 24rpx;
}

.icon-edit{
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.add-line{
  width: 100%;
  height: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-line-pic{
  width: 100%;
  height: 4rpx;
}

.product{
  background: #fff;
  padding-bottom: 14rpx;
  margin-bottom: 20rpx;
}

.pro-header{
  height: 66rpx;
  padding-left: 26rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.pro-header-icon{
  width: 33rpx;
  height: 30rpx;
}

.pro-icon-txt{
  width: 100rpx;
  height: 30rpx;
  background: #F5032E;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  margin-left: 17rpx;
}

.pro-item{
  background: #F9F9F9;
  padding: 20rpx 37rpx 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 14rpx;
}

.pro-i-img{
  width: 140rpx;
  height: 140rpx;
  background: #fff;
}

.pro-i-t-wrap{
  margin-left: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.pro-i-t-name{
  font-size: 24rpx;
  color: #333;
}

.pro-i-t-gg{
  color: #999;
  font-size: 22rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.pro-i-t-pm{
  font-size: 24rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pro-i-t-p{
  color: #FF3333;
}

.pro-i-t-m{
  font-size: 24rpx;
  color: #333;
}

.price{
  padding-left: 35rpx;
  padding-right: 35rpx;
  background: #fff;
  margin-bottom: 23rpx;
}

.price-l{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F0F0F0;
}

.price-l-name{
  font-size: 24rpx;
  color: #333;
}

.price-l-price{
  font-size: 22rpx;
  color: #F02F2F;
}

.pay{
  background: #fff;
}

.pay-header{
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.pay-item{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 49rpx 41rpx 24rpx;
}

.pay-item-name{
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay-item-wx-logo{
  width: 40rpx;
  height: 37rpx;
}

.pay-item-wx-t{
  font-size: 28rpx;
  color: #1A1A1A;
  margin-left: 24rpx;
}

.wx-radio{
  color: #FF4648;
}

.bar{
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  left: 0;
  display: flex;
}

.bar-money{
  flex: 1;
  padding-right: 37rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  background: #fff;
}

.bar-m-b{
  color: #F91A1A;
}

.bar-btn{
  width: 257rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FF4648;
  font-size: 30rpx;
  color: #fff;
}