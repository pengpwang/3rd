/* pages/groupBuying/groupBuying.wxss */
.type-con{
  justify-content: space-between;
  position: relative;
  top:0rpx;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
}
.type-item{
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  font-size:26rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin: 0 30rpx;
}
.type-item.active{
  color:#FF2741;
  border-bottom: 4rpx solid #FF2741;
}
.type-right{
  padding: 0 21rpx;
  height: 72rpx;
}
.type-right image{
  width: 12rpx;
  height: 7rpx;
  display: block;
}
.hd{
  width: 100%;
  height: 250rpx;
  margin-top: 14rpx;
}
.commodity-title{
  font-size:28rpx;
  line-height: 28rpx;
  font-weight:500;
  color:#000000;
  margin-left: 15rpx;
  margin-top: 17rpx;
  margin-bottom: 19rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid rgba(245,11,0,1);
}
.commodity-title span{
  color:rgba(245,11,0,1);
}
.commodity-con{
  flex-flow: wrap;
  justify-content: space-between;
  padding: 0 29rpx;
}
.commodity-list{
  width: 335rpx;
  height: 482rpx;
  border:2rpx solid rgba(238, 238, 238, 1);
  border-radius:20rpx;
  margin-bottom: 14rpx;
}
.top-img{
  width: 100%;
  height: 342rpx;
  background:#F6F6F6;
}
.top-img image{
  width: 222rpx;
  height: 222rpx;
  display: block;
  margin: 0 auto;
}
.bot-con{
  padding: 17rpx 20rpx 20rpx ;
}
.bot-con .title{
  font-size:26rpx;
  line-height: 32rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.desc-con{
  margin-top: 15rpx;
}
.desc-con .price{
  font-size:30rpx;
  line-height: 30rpx;
  font-weight:bold;
  color:rgba(221,29,29,1);
}
.desc-con .nums{
  font-size:20rpx;
  line-height: 20rpx;
  font-weight:500;
  color:rgba(153,153,153,1);
}