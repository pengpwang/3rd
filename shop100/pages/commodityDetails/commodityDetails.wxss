/* pages/commodityDetails/commodityDetails.wxss */

/*公共样式*/
.commodity-pad{
  padding: 0 25rpx;
}
.pad33{
  padding: 0 33rpx;
}
.commodity-border{
  border-top:15rpx solid #f3f3f3;
}
.commodity-left{
  width: 660rpx;
}
image.right{
  width: 14rpx;
  height: 23rpx;
}

/*商品轮播*/
.top-swiper{
  width:100%rpx;
  height:600rpx;
  background: #FFFCFE;
}
.top-swiper swiper{
  width: 682rpx;
  height: 596rpx;
  margin: 0 auto;
  background: #fff;
}
.top-swiper swiper image{
  width: 500rpx;
  height:500rpx;
  display: block;
  margin: 0 auto;
}
 .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 48rpx;
}

/* 商品价格名称等 */
.commodity-name{
  padding-bottom: 17rpx;
  padding-top: 24rpx;
}
.commodityPrice{
  font-size: 24rpx;
  color: #FF4648;
  font-weight: bold;
  line-height: 34rpx;
}
.commodityPrice span.max{
  font-size: 34rpx;
  margin-left: 10rpx;
}
.commodityPrice span{
  font-size: 28rpx;
}
.commodityName{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:32rpx;
  margin-top: 13rpx;
}
.commodityTag{
  font-size:24rpx;
  font-weight:500;
  color:#FF4648;
  line-height: 30rpx;
  margin-top: 9rpx;
}
/*商品数量*/
.commodity-nums{
  justify-content: flex-start;
  height: 84rpx;
}
.commodity-nums .numsName{
  font-size:24rpx;
  font-weight:500;
  color:rgba(141,141,141,1);
}
.numsBtn{
  width: 51rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  background:rgba(245,245,245,1);
  border-radius:4rpx;
  font-weight:bold;
  font-size: 28rpx;
  color:rgba(152,152,152,1);
  margin: 0 24rpx;
}
.numsVal{
  font-size:24rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.numsHas{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(141,141,141,1);
}
/*选择收获地址*/
.commodity-address{
  height: 123rpx;
  padding-top: 30rpx;
}
.commodity-address .commodity-left{
  justify-content: flex-start;
}
.commodity-left .desc{
  font-size:24rpx;
  line-height: 23rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(141,141,141,1);
}
.commodity-left .address{
  font-size:24rpx;
  line-height: 24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-left: 29rpx;
}

.commodity-bot{
  font-size:20rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  line-height: 21rpx;
  margin-top: 16rpx;
  color:rgba(153,153,153,1);
  padding-left:77rpx;
}
.commodity-bot span{
  color:#F5032E;
}
/* 商品介绍 */
.introduce-item{
  border-bottom:2rpx solid #F0F0F0;
}
.introduce-item:last-child{
  border:none
}
.introduce-item .indicatorName{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(141,141,141,1);
  height: 75rpx;
}
.indicatorName{
  height: 80rpx;
  line-height: 80rpx;
}
.indicatorName span{
  color:#F5032E;
}
.personNums{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(141,141,141,1);
}
/*商品店铺*/
.commodity-shop{
  padding-top: 26rpx;
  padding-bottom: 33rpx;
}
.shopTag{
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  text-align: center;
  background:rgba(241,245,244,1); 
  border-radius: 15rpx;
  font-size:20rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(78,78,78,1);
  margin-right: 22rpx;
}
.shopTag.red{
  color:#fff;
  background: #F5032E
}
.shop-right button{
  background: #F5032E;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:#FFF;
  width: 130rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  margin: 0;
  padding: 0;
  border-radius: 48rpx;
  margin-left: 24rpx;
}
.shop-right button.bot{
  border:1rpx solid #F5032E;
  color:#F5032E;
  background: #FFF;
}
button::after{
  border:none
}
.shop-branch{
  margin-top: 28rpx;
}
.branch-item{
  font-size:24rpx;
  line-height: 24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(141,141,141,1);
}
/*商品详情*/
.commodity-details{
  height: 90rpx;
  width: 100%;
  background: #f3f3f3;
  justify-content: center
}
.commodity-details .line{
  width: 250rpx;
  height: 2rpx;
  background: #E2E2E2;
}
.detailsName{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(187,187,187,1);
  margin: 0 40rpx;
}
/*到底线了*/
.type-title{
  justify-content: center;
  background: #f3f3f3;
  padding: 30rpx 0 125rpx 0;
}
.type-title .line{
  width:50rpx;
  height:2rpx;
  background:rgba(230,230,230,1);
}
.titleName{
  font-size:24rpx;
  font-weight:400;
  margin: 0 12rpx;
  color:#909090;
}

.foot-btn{
  position: fixed;
  bottom:0rpx;
  width: 100%;
  height: 90rpx;
  background: #fff;
}
.foot-btn .notice image{
  width: 36rpx;
  height: 33rpx;
  display: block;
  margin: 0 auto;
}
.foot-btn .car{
  position: relative
}
.foot-btn .car .nums{
  position: absolute;
  top:-12rpx;
  right: 12rpx;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  font-size:18rpx;
  font-family:PingFang-SC-Medium;
  font-weight:bold;
  color:rgba(255,255,255,1);
  background: #F5032E;
  text-align: center;
  line-height: 30rpx;
  overflow: hidden;
}
.foot-btn .car image{
  width: 40rpx;
  height: 37rpx;
  display: block;
  margin: 0 auto;
}
.btn-item{
  width: 105rpx;
}
.btn-item .name{
  font-size:20rpx;
  line-height: 20rpx;
  margin-top: 9rpx;
  font-family:PingFang-SC-Medium;
  font-weight:bold;
  color:rgba(153,153,153,1);
  text-align: center;
}
.foot-btn .btn{
 text-align: center;
 line-height: 90rpx;
 color:rgba(255,255,255,1);
}
.foot-btn .addCar{
  border-radius:0;
  width:260rpx;
  height:90rpx;
  background:rgba(246,201,68,1);
  font-size:30rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
}
.foot-btn .buy{
  border-radius:0;
  flex-grow: 1;
  height:90rpx;
  background:rgba(255,70,72,1);
  font-size:30rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
}
/* 尺寸选择 */
.commodity-size .name{
  font-size:24rpx;
  font-weight:500;
  color:rgba(141,141,141,1);
}
.commodity-size .flex{
  justify-content: flex-start;
}
.commodity-size>.flex{
  padding: 15rpx 0;
}
.commodity-size .box{
  height: 60rpx;
  line-height: 60rpx;
  min-width: 100rpx;
  padding: 0 15rpx;
  color:#333333;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  border:2rpx solid #cccccc;
  margin-right: 30rpx;
}
.commodity-size .box.active{
  color:#FF4648;
  border-color: #FF4648;
}
.commodity-size .name-item{
  font-size: 26rpx;
  color:#333333;
  margin-right: 30rpx;
}